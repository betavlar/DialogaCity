<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:focusableInTouchMode="false"
    android:id="@+id/contenedorPadre">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contenedorArriba">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/IconoListadoItem" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/TextoListadoItem"
            android:textStyle="bold"
            android:text="test"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/TextoIDItem"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/IconoEstadoItem" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contenedorAbajo">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imagenValorar"
            android:src="@android:drawable/star_big_on" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/TextoValoracion"
            android:textStyle="bold"
            android:text="test"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/espacioBlanco" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: "
            android:textColor="@android:color/holo_blue_dark"
            android:id="@+id/etiqFechaFija"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MM-DD-AAAA"
            android:textColor="@android:color/black"
            android:id="@+id/etiqFecha"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>